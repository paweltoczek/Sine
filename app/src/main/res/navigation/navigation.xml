<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/welcomeScreen">

    <fragment
        android:id="@+id/welcomeScreen"
        android:name="com.amadev.rando.ui.fragments.WelcomeScreen"
        android:label="fragment_welcome_screen"
        tools:layout="@layout/fragment_welcome_screen" >
        <action
            android:id="@+id/action_welcomeScreen_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popUpTo="@id/welcomeScreen"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_welcomeScreen_to_signinOrSignUpFragment"
            app:destination="@id/signinOrSignUpFragment"
            app:popUpTo="@id/welcomeScreen"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.amadev.rando.ui.onboarding.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_signinOrSignUpFragment"
            app:destination="@id/signinOrSignUpFragment"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/choiceFragment"
        android:name="com.amadev.rando.ui.fragments.choice.ChoiceFragment"
        android:label="fragment_choice"
        tools:layout="@layout/fragment_choice" >
        <action
            android:id="@+id/action_choiceFragment_to_youtubeActivity"
            app:destination="@id/youtubeActivity">
            <argument
                android:name="movieId"
                app:argType="integer"
                android:defaultValue="0"/>
        </action>
        <action
            android:id="@+id/action_choiceFragment_to_welcomeScreen"
            app:destination="@id/welcomeScreen" />
        <action
            android:id="@+id/action_choiceFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
    </fragment>
    <activity
        android:id="@+id/youtubeActivity"
        android:name="com.amadev.rando.YoutubeActivity"
        android:label="activity_youtube"
        tools:layout="@layout/activity_youtube" />
    <fragment
        android:id="@+id/signinOrSignUpFragment"
        android:name="com.amadev.rando.ui.fragments.signinorsignup.SigninOrSignUpFragment"
        android:label="fragment_signin_or_sign_up"
        tools:layout="@layout/fragment_signin_or_sign_up" >
        <action
            android:id="@+id/action_signinOrSignUpFragment_to_choiceFragment"
            app:destination="@id/choiceFragment" />
        <action
            android:id="@+id/action_signinOrSignUpFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_signinOrSignUpFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signinOrSignUpFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.amadev.rando.ui.fragments.signin.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_choiceFragment"
            app:destination="@id/choiceFragment" />
        <action
            android:id="@+id/action_signInFragment_to_signinOrSignUpFragment"
            app:destination="@id/signinOrSignUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.amadev.rando.ui.fragments.signup.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_signinOrSignUpFragment"
            app:destination="@id/signinOrSignUpFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.amadev.rando.ui.fragments.favorites.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.amadev.rando.ui.fragments.mainFragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_youtubeActivity"
            app:destination="@id/youtubeActivity" />
        <action
            android:id="@+id/action_mainFragment_to_movieDetailsDialog"
            app:destination="@id/movieDetailsDialog"
            app:enterAnim="@anim/scale_up_animation" />
    </fragment>
    <dialog
        android:id="@+id/movieDetailsDialog"
        android:name="com.amadev.rando.ui.dialogs.movieDetails.MovieDetailsDialog"
        android:label="MovieDetailsDialog" />

</navigation>